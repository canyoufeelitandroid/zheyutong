<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_color">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/top_pic"
        android:layout_marginBottom="50dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/logon">
        <TextView
            android:id="@+id/account"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="用户名"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/password"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="密    码"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/gray"
            android:layout_margin="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/account"
            />
        <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gray"
        android:layout_below="@+id/account"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/gray"
            android:layout_below="@+id/password"/>
        <EditText
            android:id="@+id/account_in"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/edittext"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"/>
        <EditText
            android:id="@+id/password_in"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/edittext"
            android:layout_alignParentRight="true"
            android:layout_below="@id/account_in"/>
        <CheckBox
            android:id="@+id/remind_not"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:checked="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/password"/>
        <TextView
            android:id="@+id/remind_password"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_toRightOf="@+id/remind_not"
            android:layout_below="@+id/password"
            android:text="记住密码"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/gray"/>
    </RelativeLayout>
    <Button
        android:id="@+id/logonBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登陆"
        android:textColor="@color/white_color"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_logon"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <TextView
            android:id="@+id/forgetBtn"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="忘记密码"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/registBtn"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="注册账号"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/gray"/>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fuBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:src="@drawable/next"
        app:theme="@style/MyFloatingButton"
        android:layout_marginBottom="10dp"
        app:fabSize="auto"
        app:rippleColor="@color/red"
        app:borderWidth="0dp"
        app:elevation="13dp"
        app:pressedTranslationZ="20dp"

        />

</LinearLayout>
