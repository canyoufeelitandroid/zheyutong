<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
       <item name="android:windowAnimationStyle">@style/activityAnim</item>
    </style>

    <style name="MyFloatingButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/dark_red</item>
    </style>
    <style name="Theme.AppCompat.Light.NoActionBar"  parent="@style/Theme.AppCompat.Light"></style>
    <!-- Activity转换动画 -->
    <style name="activityAnim" >
        <item name="android:activityOpenEnterAnimation">@anim/in_left</item>
        <item name="android:activityOpenExitAnimation">@anim/to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/left_out</item>
    </style>
</resources>
